<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= recipe.name %></h1>

        <div style="width: 30%; margin: 30px auto">
            <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input name="recipe[name]" class="form-control" type="text" value="<%= recipe.name %>">
                </div>
                <div class="form-group">
                    <input name="recipe[image]" class="form-control" type="text" value="<%= recipe.image %>">
                </div>
                <div class="form-group">
                    <input name="recipe[description]" class="form-control" type="text" value="<%= recipe.description %>">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-large btn-primary btn-block">
                </div>

            </form>
            <a href="/recipes">Back</a>
        </div>
 
    </div>
    
</div>

<% include ../partials/footer %>