<% include ../partials/header %>


<div class="container">
    <div class="row">
        
        <div class="centerMe">
            <h1>Create a new comment on <%= recipe.name%></h1>
            <form action="/recipes/<%= recipe._id%>/comments" method="POST">
                <div class="form-group">
                    <textarea name="comment[text]" class="form-control" placeholder="comment here" rows=5></textarea>
                </div>
                
                <div class="form-group">
                    <input type="submit" class="btn btn-large btn-primary btn-block">
                </div>

            </form>
            <a href="/recipes">Back</a>
        </div>
    
    
    
        
        
    </div>
    
</div>

